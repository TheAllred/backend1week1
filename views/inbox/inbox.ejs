<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <%- messages() %>
<section class="inbox">
  <h2>Welcome <%-fname%>!</h2>
  <h3>Message Center</h3>
  <ul>
    <li>You have <%- unread %> unread messages</li>
    <li>You have <%- archivedMessages %> messages in the archive</li>
  </ul>
  <a href="inbox/newMessage">Compose New Message</a>
  <a href="inbox/archive">View Archive</a>
  <table class="inbox_table">
    <thead>
      <tr>
        <th>Received</th>
        <th>Subject</th>
        <th>From</th>
        <th>Read</th>
        <th>Archived</th>
      </tr>
    </thead>
    <tbody>
      <%- inboxRows %>
    </tbody>
  </table>
</section>
